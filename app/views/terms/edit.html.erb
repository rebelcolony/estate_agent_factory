<h1>Editing term</h1>

<% form_for(@term) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :terms %><br />
    <%= f.text_field :terms %>
  </p>
  <p>
    <%= f.label :house_id %><br />
    <%= f.text_field :house_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @term %> |
