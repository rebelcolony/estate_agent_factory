    <%= f.label :title %>
	<p>
    <%= f.text_field :title %>
  	</p>

 	<%= f.label :location %>
	<p>
	<%= collection_select(:house, :location_id, Location.find(:all), :id, :location) %>
	</p>

 	<%= f.label :terms %>
	<p>
	<%= collection_select(:house, :term_id, Term.find(:all), :id, :terms) %>
	</p>

	<%= f.label :teaser %>
  	<p>
    <%= f.text_area :teaser %>
	</p>

  
    <%= f.label :price %>
	<p>
    <%= f.text_field :price %>
  	</p>

    <%= f.label :description %>
	<p>
    <%= f.text_area :description %>
  	</p>

    <%= f.label :bedrooms %>
	<p>
    <%= f.text_field :bedrooms %>
  	</p>

  
    <%= f.label :bathrooms %>
	<p>
    <%= f.text_field :bathrooms %>
  	</p>

  
    <%= f.label :maidsrooms %>
	<p>
    <%= f.text_field :maidsrooms %>
  	</p>

  
    <%= f.label :floor_area %>
	<p>
    <%= f.text_field :floor_area %>
  	</p>

  	
    <%= f.label :lot_area %>
	<p>
    <%= f.text_field :lot_area %>
  	</p>


    <%= f.label :payment %>
	<p>
    <%= f.text_field :payment %>
  	</p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
